<openerp>
    <data> 
        <record id="view_account_journal_fp_form" model="ir.ui.view">
            <field name="model">account.journal</field>
            <field name="name">account.journal.fp.form</field>
            <field name="inherit_id" ref="account.view_account_journal_form" />
            <field name="arch" type="xml">
		<field name='type' position='after'>
			<field name="use_fiscal_printer"/>
		</field>
	    	<notebook position="inside">
                <page string="Fiscal Printer" attrs="{'invisible':[('use_fiscal_printer','=', False)]}">
                    <group colspan="2" col="2">
                        <field name='fiscal_printer_id'/>
                        <field name='fiscal_printer_state'/>
                        <field name='fiscal_printer_items_generated'/>
                    </group>
                </page>
	    	</notebook>
            </field>
        </record>
  </data>
</openerp>
